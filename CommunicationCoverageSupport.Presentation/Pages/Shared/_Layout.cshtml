<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CommunicationCoverageSupport.Presentation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CommunicationCoverageSupport.Presentation.styles.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">CommunicationCoverageSupport.Presentation</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
                    @{
                        var token = HttpContextAccessor.HttpContext?.Session.GetString("JwtToken");
                    }

                    <ul class="navbar-nav ms-auto">
                        @if (!string.IsNullOrEmpty(token))
                        {
                            <li class="nav-item">
                                <a class="btn btn-danger ms-2" asp-page="/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary me-2" asp-page="/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-page="/Register">Sign Up</a>
                            </li>
                        }
                    </ul>

                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white pt-5 pb-3">
        <div class="container">
            <div class="row">
                <!-- Logo + tagline -->
                <div class="col-md-4 mb-3">
                    <h5>Support</h5>
                    <p class="small text-muted">Helping businesses manage mobile SIM fleets with control, clarity, and insight.</p>
                </div>

                <!-- Contact Info -->
                <div class="col-md-4 mb-3">
                    <h6>Contact Us</h6>
                    <ul class="list-unstyled small">
                        <li><i class="bi bi-envelope me-2"></i> support@ccs.com</li>
                        <li><i class="bi bi-telephone me-2"></i> +38 (044) 123-45-67</li>
                        <li><i class="bi bi-geo-alt me-2"></i> Kyiv, Ukraine</li>
                    </ul>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4 mb-3">
                    <h6>Quick Links</h6>
                    <ul class="list-unstyled small">
                        <li><a class="text-white text-decoration-none" asp-page="/Privacy">Privacy Policy</a></li>
                        <li><a class="text-white text-decoration-none" asp-page="/Register">Create Account</a></li>
                        <li><a class="text-white text-decoration-none" asp-page="/Login">Login</a></li>
                    </ul>
                </div>
            </div>

            <hr class="border-secondary" />
            <div class="text-center small text-muted">
                &copy; 2025 CommunicationCoverageSupport. All rights reserved.
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>