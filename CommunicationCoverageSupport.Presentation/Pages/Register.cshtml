@page
@model CommunicationCoverageSupport.Presentation.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="mb-4">Create an Account</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form method="post">
    <div class="mb-3">
        <label asp-for="RegisterRequest.Username" class="form-label"></label>
        <input asp-for="RegisterRequest.Username" class="form-control" />
        <span asp-validation-for="RegisterRequest.Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="RegisterRequest.Password" class="form-label"></label>
        <input asp-for="RegisterRequest.Password" type="password" class="form-control" />
        <span asp-validation-for="RegisterRequest.Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="RegisterRequest.Role" class="form-label"></label>
        <select asp-for="RegisterRequest.Role" class="form-select">
            <option value="user">User</option>
            <option value="admin">Admin</option>
        </select>
        <span asp-validation-for="RegisterRequest.Role" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
