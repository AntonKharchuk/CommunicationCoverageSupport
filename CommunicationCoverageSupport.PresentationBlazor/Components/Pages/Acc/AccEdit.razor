@rendermode RenderMode.InteractiveServer
@page "/acc/edit/{Id:int}"
@using CommunicationCoverageSupport.Models.DTOs
@using CommunicationCoverageSupport.PresentationBlazor.Services.Acc
@inject IAccService AccService
@inject NavigationManager Navigation

<h3>Edit Account</h3>

@if (acc == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <EditForm Model="acc" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <InputText id="name" class="form-control" @bind-Value="acc.Name" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary ms-2" @onclick="Cancel">Cancel</button>
    </EditForm>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private AccDto? acc;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            acc = await AccService.GetByIdAsync(Id);
            StateHasChanged();
        }    
    }

    private async Task HandleValidSubmit()
    {
        if (acc != null)
        {
            await AccService.UpdateAsync(acc.Id, acc.Name);
            Navigation.NavigateTo("/acc");
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/acc");
    }
}